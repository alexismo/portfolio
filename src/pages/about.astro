import audi from "../images/about/audi.svg";
import autodesk from "../images/about/autodesk.svg";
import ba from "../images/about/ba.svg";
import compass from "../images/about/compass.svg";
import designit from "../images/about/designit.svg";
import ef from "../images/about/ef.svg";
import ford from "../images/about/ford.svg";
import google from "../images/about/google.svg";
import hk from "../images/about/hk.png";
import imagination from "../images/about/imagination.png";
import jbl from "../images/about/jbl.png";
import lightspeed from "../images/about/lightspeed.svg";
import lincoln from "../images/about/lincoln.svg";
import mastercard from "../images/about/mastercard.svg";
